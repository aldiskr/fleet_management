<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col">
    <h3>List of cars</h3>
  </div>
  <div class="col nav justify-content-end">
    <%= link_to 'Add new car', new_car_path, :class=> 'btn btn-primary' %>
  </div>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Car's name</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.name %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
