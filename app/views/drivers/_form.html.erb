<%= form_with(model: driver, local: true) do |form| %>
<%= render 'shared/errors', object: driver %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit :class => 'btn btn-primary' %>
  </div>
<% end %>
