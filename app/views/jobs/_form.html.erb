<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>
      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :driver_id %>
    <%= form.collection_select :driver_id, Driver.all, :id, :name,{}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :car_id %>
    <%= form.collection_select :car_id, Car.all, :id, :name,{}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :busy_from %>
    <%= form.datetime_select :busy_from,{}, {:class => 'datepicker'} %>
  </div>

  <div class="form-group">
    <%= form.label :busy_to %>
    <%= form.datetime_select :busy_to,{}, {:class => 'datepicker'} %>
  </div>

  <div class="form-group">
    <%= form.submit :class=>'btn btn-primary' %>
  </div>
<% end %>
