<%= form_with(model: job, local: true) do |form| %>
<%= render 'shared/errors', object: job %>

  <div class="form-group">
    <%= form.label :driver_id %>
    <%= form.collection_select :driver_id, Driver.all, :id, :name,{}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :car_id %>
    <%= form.collection_select :car_id, Car.all, :id, :name,{}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <%= form.label :busy_from %>
    <%= form.datetime_select :busy_from,{}, {:class => 'datepicker'} %>
  </div>

  <div class="form-group">
    <%= form.label :busy_to %>
    <%= form.datetime_select :busy_to,{}, {:class => 'datepicker'} %>
  </div>

  <div class="form-group">
    <%= form.submit :class=>'btn btn-primary' %>
  </div>
<% end %>
