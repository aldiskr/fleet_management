<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Driver</th>
      <th>Car</th>
      <th>Busy from</th>
      <th>Busy to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.driver.name %></td>
        <td><%= job.car.name %></td>
        <td><%= job.busy_from.strftime('%Y.%m.%d %H:%M') %></td>
        <td><%= job.busy_to.strftime('%Y.%m.%d %H:%M') %></td>
        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to 'New job', new_job_path %></p>
